{
  "manifest_version": 3,
  "name": "LocalMind",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/icon16.png",
        "images/icon48.png",
        "images/icon128.png",
        "config/special-domains-default.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}